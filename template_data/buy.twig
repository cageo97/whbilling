{% extends "includes/base.twig" %}
{% block page_title %}{% endblock %}
{% block page_head %}{% endblock %}
{% block page_body %}
    {% include "includes/navbar.twig" %}
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h4>VPS Hosting</h4>
                </div>
                <div class="col-lg-6 text-right">
                
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <div class="row">
            {% for product in products %}
            <div class="col-lg-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <h3 class="text-center">{{ product.name|e }}</h3>
                        <h5 class="text-center">$50.34<small>/Monthly</small></h5>
                        <div>{{ product.description|raw }}</div>
                        <div class="text-center"><a href="/buy/{{ product.id|e }}" class="btn btn-primary">Order Now</a></div>
                    </div>
                </div>
            </div>
            {% else %}
                <p>No products found</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}