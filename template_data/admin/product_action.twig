{% extends "includes/base.twig" %}
{% block page_title %}{% endblock %}
{% block page_head %}{% endblock %}
{% block page_body %}
    {% include "includes/navbar.twig" %}
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h4>Add New Product</h4>
                </div>
                <div class="col-lg-6 text-right">
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <form action="" method="POST">
                    <div class="form-group">
                        <label>Product Name</label>
                        <input type="text" class="form-control" placeholder="" name="name">
                    </div>
                    <div class="form-group">
                        <label>Product Category</label>
                        <select class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label>Product Description</label>
                        <textarea class="form-control" name="description"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Pricing</label>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Monthly</th>
                                    <th>Quarterly</th>
                                    <th>Semi-Annually</th>
                                    <th>Annually</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Setup Fee</td>
                                    <td><input type="number" class="form-control" name="setup_monthly"></td>
                                    <td><input type="number" class="form-control" name="setup_quarterly"></td>
                                    <td><input type="number" class="form-control" name="setup_semiannually"></td>
                                    <td><input type="number" class="form-control" name="setup_annually"></td>
                                </tr>
                                <tr>
                                    <td>Price</td>
                                    <td><input type="number" class="form-control" name="price_monthly"></td>
                                    <td><input type="number" class="form-control" name="price_quarterly"></td>
                                    <td><input type="number" class="form-control" name="price_semiannually"></td>
                                    <td><input type="number" class="form-control" name="price_annually"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <button class="btn btn-primary">Save Changes</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}