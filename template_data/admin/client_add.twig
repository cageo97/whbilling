{% extends "includes/base.twig" %}
{% block page_title %}{% endblock %}
{% block page_head %}{% endblock %}
{% block page_body %}
    {% include "includes/navbar.twig" %}
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                {% include "includes/admin_sidebar.twig" %}
            </div>
            <div class="col-lg-9">
                <h3>Add New Client</h3>
                <div class="card">
                    <div class="card-body">
                        <form action="#" method="POST">
                            <div class="form-group">
                                <label>Email Address</label>
                                <input type="email" name="email" class="form-control" value="{{ form.email|e }}">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" name="password" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Confirm Password</label>
                                <input type="password" name="password_confirm" class="form-control">
                            </div>
                            <div class="form-group">
                                <span class="text-danger">{{ form.error }}</span>
                            </div>
                            <button class="btn btn-success">Create Client</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}